<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
		<record model="account.account.template" id="transfer_account_id">
		 <field name="name">Cuenta de transferencia</field>
		 <field name="code">10.01.03</field>
		 <field name="user_type_id" ref="account.data_account_type_current_assets" />
		 <field name="reconcile" eval="True" />
		</record>

		<record id="ec_chart_template" model="account.chart.template">
		  <field name="name">ITC - Plan de Cuentas NIFF Ecuador</field>
		  <field name="currency_id" ref="base.USD"/>
		  <field name="transfer_account_id" ref="transfer_account_id"/>
		  <field name="cash_account_code_prefix">10.01.01</field>
		  <field name="bank_account_code_prefix">10.01.02</field>
		  <field name="code_digits" eval="6"/>
		  <field name="spoken_languages" eval="'es_EC'"/>
		</record>    

		<record model="account.account.template" id="transfer_account_id">
		  <field name="chart_template_id" ref="ec_chart_template"/>
		</record>

</odoo>
